files:
  "/etc/cron.d/bear-ocr-worker":
    mode: "000644"
    owner: root
    group: root
    content: |
      # run every minute
      * * * * * root /var/app/current/scripts/ocr_cron.sh >> /var/log/ocr_worker.log 2>&1

commands:
  01_reload_cron:
    command: "systemctl reload crond || systemctl restart crond"
